block content
  section(style="margin-top: 250px;")
    .container
      .row
        //- Main Content
        .col-lg-8
          //- Main Image
          .mb-5
             img.w-100.rounded-3(src=`${CWD}assets/img/dest/uluwatu/uluwatutemple.jpg` alt="Uluwatu Tour")
          
          //- Header & Summary
          h1.fw-bold.fs-3.fs-lg-5.mb-3 Uluwatu Tour
          h5.text-warning.fw-bold.mb-4 Price : USD 65/ Car

          .row.mb-5
            .col-md-6
               h5.fw-bold.mb-3 Itinerary :
               ul.list-unstyled
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-circle.text-warning.me-3.small(style="font-size: 8px;")
                   | Water Sport
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-circle.text-warning.me-3.small(style="font-size: 8px;")
                   | GWK (Garuda Wisnu Kencana)
