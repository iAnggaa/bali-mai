extends layouts/LayoutTheme

append variables
  - var CWD = './'

append footerStyles
  style.
    .navbar {
      background-color: #fff !important;
      box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    body {
      background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), url('assets/img/dest/tanahlotsunset/tanahlottemple.jpg') no-repeat center center fixed;
      background-size: cover;
    }

block content
  section(style="margin-top: 250px;")
    .container
      .row
        //- Main Content
        .col-lg-8
          //- Main Image
          .mb-5
             img.w-100.rounded-3(src=`${CWD}assets/img/dest/tanahlotsunset/tanahlottemple.jpg` alt="Tanah Lot Sunset")
             
          //- Itinerary
          h1.fw-bold.fs-3.fs-lg-5.mb-3 Tanah Lot Sunset Tour
          h5.text-warning.fw-bold.mb-4 Price : USD 40/ Car (6 Hours)

          .row.mb-5
            .col-md-6
               h5.fw-bold.mb-3 Itinerary :
               ul.list-unstyled
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-circle.text-warning.me-3.small(style="font-size: 8px;")
                   | Taman Ayun temple
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-circle.text-warning.me-3.small(style="font-size: 8px;")
                   | Tanah Lot temple
            
            .col-md-6
               h5.fw-bold.mb-3 Whats Include :
               ul.list-unstyled
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-check.text-success.me-3
                   | English speaking driver
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-check.text-success.me-3
                   | Mineral water
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-check.text-success.me-3
                   | Charger plug
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-check.text-success.me-3
                   | Parking & toll fee
                 li.d-flex.align-items-center.mb-2
                   i.fas.fa-check.text-success.me-3
                   | Petrol

          h3.fw-bold.mb-3 Tour Details :
          
          .d-flex.flex-column.gap-5
            //- Item 1: Taman Ayun Temple
            .row
              .col-12 
                 h5.fw-bold.text-warning Taman Ayun Temple
                 .my-3
                   img.rounded-2(src=`${CWD}assets/img/dest/tanahlotsunset/tamanayuntemple.jpg` width="100%" alt="Taman Ayun Temple")
                 p Taman Ayun Temple is easily reached through the main road from Denpasar to Singaraja via Bedugul direction. Taman Ayun Temple is a very beautiful Hindu temple uniquely designed with a distinctive style of Balinese architecture and surrounded by a large of fishpond that looks like floating on the water.
            
            //- Item 2: Tanah Lot Temple
            .row
              .col-12 
                 h5.fw-bold.text-warning Tanah Lot temple
                 .my-3
                   img.rounded-2(src=`${CWD}assets/img/dest/tanahlotsunset/tanahlottemple.jpg` width="100%" alt="Tanah Lot Temple")
                 p Tanah Lot Temple on a rocky island just off the southwest coast of Bali. One of Bali's most sacred sea temples, Tanah Lot is dedicated to the guardian spirits of the sea. The temple itself is said to be guarded from evil by the sea snakes that inhabit the caves below. The temple itself is not accessible to visitors, but magnificent views can be had from a variety of points nearby.
            
          
        
        //- Sidebar
        .col-lg-4
           .mb-5
              //- Booking Form
              .card.border-0.shadow.mb-5.bg-warning.bg-opacity-25
                 .card-header.bg-warning.text-white.text-center.py-3
                    h5.mb-0.fw-bold Booking Form
                 .card-body.p-4
                    form
                       .mb-3
                          label.form-label.fw-bold Name
                          input.form-control#name(type="text")
                       .mb-3
                          label.form-label.fw-bold Booking Date
                          input.form-control#bookingDate(type="date") 
                       .mb-3
                          label.form-label.fw-bold Number of People
                          input.form-control#people(type="number")
                       .mb-3
                          label.form-label.fw-bold Hotel & Address
                          input.form-control#hotel(type="text")
                       .mb-3
                          label.form-label.fw-bold Tour Packages
                          input.form-control#tourPackage(type="text" value="Tanah Lot Sunset" readonly)
                       .mb-3
                           label.form-label.fw-bold Note ( Optional )
                           textarea.form-control#note(rows="3")
                       .mt-3
                           button.btn.btn-dark.w-100.rounded-pill#btnBooking(type="button") Booking Now
                          
              //- Other Tours List
              .card.border-0.shadow.mb-5
                 .card-body.p-4
                    h5.text-warning.fw-bold.mb-4 Full Day Tours
                    ul.list-unstyled.d-flex.flex-column.gap-3
                       li 
                          i.fas.fa-arrow-right.text-warning.me-2
                          a.text-decoration-none.text-secondary(href="uluwatu-tour.html") Uluwatu Tour
                       li 
                          i.fas.fa-arrow-right.text-warning.me-2
                          a.text-decoration-none.text-secondary(href="gate-of-heaven-tour.html") Gate Of Heaven
                       li 
                          i.fas.fa-arrow-right.text-warning.me-2
                          a.text-decoration-none.text-secondary(href="nusa-penida-tour.html") Nusa Penida One Day Tour
                       li 
                          i.fas.fa-arrow-right.text-warning.me-2
                          a.text-decoration-none.text-secondary(href="bedugul-tour.html") Bedugul Tour
                       li 
                          i.fas.fa-arrow-right.text-warning.me-2
                          a.text-decoration-none.text-secondary(href="kintamani-tour.html") Kintamani Tour
                       li 
                          i.fas.fa-arrow-right.text-warning.me-2
                          a.text-decoration-none.text-secondary(href="sunrise-tour.html") Sunrise Tour
                       li 
                          i.fas.fa-arrow-right.text-warning.me-2
                          a.text-decoration-none.text-secondary(href="ubud-tour-2.html") Ubud Tour 2
                       li 
                          i.fas.fa-arrow-right.text-warning.me-2
                          a.text-decoration-none.text-secondary(href="ubud-tour-1.html") Ubud Tour 1
              
              //- Contact Us
              .card.border-0.shadow
                 .card-body.p-4
                    h5.text-warning.fw-bold.mb-4 Contact Us
                    .d-flex.align-items-center.mb-3
                       i.fas.fa-phone-alt.text-warning.me-3
                       span +6289669709690
                    .d-flex.align-items-center.mb-3
                       i.fab.fa-whatsapp.text-warning.me-3
                       span +6289669709690
                    .d-flex.align-items-center
                       i.fas.fa-envelope.text-warning.me-3
                       span agvssetiadiii31@gmail.com

